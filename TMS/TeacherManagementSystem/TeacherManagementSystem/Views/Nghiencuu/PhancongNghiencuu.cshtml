    <!-- Custom scripts for all pages-->
    <script src="~/Scripts/sb-admin-2.min.js"></script>

    <script>
        var countNC = 0;
        function addNghiencuu() {
            var ip = document.createElement("div");
            countNC++;
            var addThis =
                `
                                               <div class="form-row col-md-12" name="delNC_`+ countNC +`">
                                                    <div class="form-group col-md-1">
                                                        <label for="MaGV">MGV</label>
                                                        <input type="text" name="PCNCmaGV_`+ countNC +`" class="form-control" value="@ViewBag.ListGV[0].MaGV" disabled>
                                                    </div>
                                                    <div class="form-group col-md-8">
                                                        <label for="Tengiaovien">Tên giáo viên</label>
                                                        <select name="PCNCTengiaovien_`+ countNC + `" class="form-control selectpicker" onchange="changeMaGV(` + countNC +`)" required data-live-search="true">
                                                            @foreach (var item in ViewBag.ListGV)
	                                                        {
		                                                         <option value="@item.MaGV">@item.HoTen</option>
	                                                        }
                                                        </select>
                                                    </div>
                                                    <div class="form-group col-md-2">
                                                        <label for="vaitro">Vai trò</label>
                                                        <select id= "NCVaitro" name="PCNCvaitro_` + countNC +`" class="form-control selectpicker" required data-live-search="true">                                                            
                                                            @foreach (var item in ViewBag.TenVaitro)
	                                                        {
		                                                         <option value="@item.MaVaitro">@item.TenVaitro</option>
	                                                        }   
                                                        </select>
                                                    </div>
                                                    <div class="form-group col-md-1">
                                                        <button class="btn btn-danger float-right" name="`+ countNC +`" onclick="delNghiencuu('delNC_` + countNC +`')">-</button>
                                                    </div>
                                                </div>

                        `;
            ip.innerHTML = addThis;
            document.getElementById("PCGDgiaovien").appendChild(ip);

            //Thay selectbox
            var x = document.getElementById("tenloaiNC");
            $.ajax({
                url: "/Nghiencuu/GetTenVaitro/" + x.value,
                dataType: "json",
                success: function (vaitro) {
                    var $c = $('select[name*="PCNCvaitro_"]');
                    $c.empty();
                    for (var i = 0; i < vaitro.length; i++) {
                        $c.append('<option value="' + vaitro[i].MaVaitro + '">' + vaitro[i].TenVaitro + '</option>');
                    }
                }
            });
        }

        function delNghiencuu(namebox) {
            document.getElementsByName(namebox)[0].remove();
        }

        //Click loai nghien cuu
        function getTenCT() {
            var x = document.getElementById("tenloaiNC");
            $.ajax({
                url: "/Nghiencuu/GetTenCongtrinh/" + x.value,
                dataType: "json",
                success: function (data) {
                    //Ten Cong trinh List
                    var $c = $('#tenCTKH');
                    $c.empty();
                    for (var i = 0; i < data.length; i++) {
                        $c.append('<option value="' + data[i].id + '">' + data[i].name + '</option>');
                    }                    
                    if ($('#tenCTKH option').length == 0) {
                        document.getElementById("donvitinh").value = "";
                        document.getElementById("so").value = "";
                        document.getElementsByName("MaCongtrinhKH").value = "";
                    }
                    else {
                        $.ajax({
                            url: "/Nghiencuu/Getdonvitinh/" + data[0].id,
                            dataType: "json",
                            success: function (result) {
                                document.getElementById("donvitinh").value = result;
                            }
                        });

                        $.ajax({
                            url: "/Nghiencuu/Getso/" + data[0].id,
                            dataType: "json",
                            success: function (so) {
                                document.getElementById("so").value = so;
                            }
                        });

                        document.getElementById("MaCongtrinhKH").value = data[0].id;
                    }

                    
                }
                                    
            });
            //List Ten vai tro
            $.ajax({
                url: "/Nghiencuu/GetTenVaitro/" + x.value,
                dataType: "json",
                success: function (vaitro) {                    
                    var $c = $('select[name*="PCNCvaitro_"]');
                    $c.empty();
                    for (var i = 0; i < vaitro.length; i++) {
                        $c.append('<option value="' + vaitro[i].MaVaitro + '">' + vaitro[i].TenVaitro + '</option>');
                    }                    
                }
            });            
        }

        //Thay đổi giáo viên
        function changeMaGV(Box) {
            var id = $('select[name="PCNCTengiaovien_' + Box + '"]').children(":selected").attr("value");
            document.getElementsByName("PCNCmaGV_" + Box)[0].value = id;            
        }

            
        //Thay đổi công trình
        $("#tenCTKH").change(function () {
            var id = $(this).children(":selected").attr("value");
            
            $.ajax({
                url: "/Nghiencuu/Getdonvitinh/" + id,
                dataType: "json",
                success: function (data) {
                    document.getElementById("donvitinh").value = data;
                }
            });

            $.ajax({
                url: "/Nghiencuu/Getso/" + id,
                dataType: "json",
                success: function (result) {
                    document.getElementById("so").value = result;                    
                }
            });
            
            document.getElementById("MaCongtrinhKH").value = id;            
        });         

    </script>
</body>
