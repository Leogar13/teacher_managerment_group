
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Thêm giáo viên</title>
    <!-- Custom fonts for this template-->
    <link href="~/Content/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="~/Content/sb-admin-2.min.css" rel="stylesheet" />
    <!-- bootstrap 4 -->
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <!-- jquery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
</head>
<body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">
            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="index.html">
                <div class="sidebar-brand-text mx-3">Quản lý giáo viên</div>
            </a>
            <!-- Divider -->
            <hr class="sidebar-divider my-0">
            <!-- Nav Item - Welcome -->
            <li class="nav-item ">
                <a class="nav-link" href="@Url.Action("Index","Home")">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Chào mừng</span>
                </a>
            </li>
            <!-- Divider -->
            <hr class="sidebar-divider">
            <!-- Heading -->
            <div class="sidebar-heading">
                Giáo viên
            </div>
            <!-- Nav Item - Pages Collapse Menu -->
            <li class="nav-item active">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo">
                    <i class="fas fa-fw fa-cog"></i>
                    <span>Quản lý giáo viên</span>
                </a>
                <div id="collapseTwo" class="collapse show" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Thông tin:</h6>
                        <a class="collapse-item" href="@Url.Action("Index","GiaoVien")">Giáo viên</a> <!-- tìm,in và cập nhật lý lich giáo viên -->
                        <a class="collapse-item active" href="@Url.Action("Them","GiaoVien")">Thêm giáo viên</a>
                    </div>
                </div>
            </li>
            <!-- Nav Item - Utilities Collapse Menu -->
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseUtilities" aria-expanded="true" aria-controls="collapseUtilities">
                    <i class="fas fa-fw fa-wrench"></i>
                    <span>Tổng hợp</span>
                </a>
                <div id="collapseUtilities" class="collapse" aria-labelledby="headingUtilities" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item" href="@Url.Action("TonghopTai","ThongKe")">Tổng hợp tải</a>
                        <a class="collapse-item" href="@Url.Action("NhanLuc","ThongKe")">Nhân lực</a>
                    </div>
                </div>
            </li>
            <!-- Divider -->
            <hr class="sidebar-divider">
            <!-- Heading -->
            <div class="sidebar-heading">
                Phân công
            </div>

            <!-- Nav Item - Đào tạo -->            
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseDaotao" aria-expanded="true" aria-controls="collapseDaotao">
                    <i class="fas fa-fw fa-graduation-cap"></i>                    
                    <span>Đào tạo</span>
                </a>
                <div id="collapseDaotao" class="collapse" aria-labelledby="headingDaotao" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item" href="@Url.Action("ThemDaotao","Home")">Thêm Đào tạo</a>
                        <a class="collapse-item" href="@Url.Action("PhancongDaotao","Home")">Phân công Đào tạo</a>
                    </div>
                </div>
            </li>
            <!-- Nav Item - Nghiên cứu -->
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseNghiencuu" aria-expanded="true" aria-controls="collapseNghiencuu">
                    <i class="fas fa-fw fa-microscope"></i>                    
                    <span>Nghiên cứu</span>
                </a>
                <div id="collapseNghiencuu" class="collapse" aria-labelledby="headingNghiencuu" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item" href="@Url.Action("ThemNghienCuu","Home")">Nghiệm vụ nghiên cứu</a>                        
                        <a class="collapse-item" href="@Url.Action("PhancongNghiencuu","Home")">Phân công Nghiên cứu</a>
                        <a class="collapse-item" href="@Url.Action("Index","Nghiencuu")">Nghiên cứu</a>
                    </div>
                </div>
            </li>            
            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block">
            <!-- Sidebar Toggler (Sidebar) -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>
        </ul>
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">
                    </ul>
                </nav>
                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <!-- Page Heading -->
                    <h1 class="h3 mb-4 text-gray-800">Thêm giáo viên</h1>

                    <!-- Tabs -->
                    <section id="tabs">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-12 ">
                                    <nav>
                                        <div class="nav nav-tabs nav-fill" id="nav-tab" role="tablist">
                                            <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">Thêm mới Giáo viên</a>
                                        </div>
                                    </nav>
                                    <div class="tab-content py-3 px-3 px-sm-0" id="nav-tabContent">
                                        <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                                            <!-- Form tag -->
                                            <form method="post" action="@Url.Action("Them","GiaoVien")">
                                                <div class="form-row">
                                                    <div class="form-group col-md-1">
                                                        <label for="inputId">MGV:</label>
                                                        <input type="text" name="id" class="form-control" id="inputId" value="@ViewBag.newId" disabled>
                                                    </div>
                                                    <div class="form-group col-md-3">
                                                        <label for="example-date-input">Ngày bắt đầu:</label>
                                                        <input class="form-control" type="date" name="ngayBatDau" required id="example-date-input">
                                                    </div>
                                                    <div class="form-group col-md-5">
                                                        <label for="inputName">Họ và tên:</label>
                                                        <input type="text" name="ten" class="form-control" id="inputName" required placeholder="Họ và tên">
                                                    </div>
                                                    <div class="form-group col-md-3">
                                                        <label for="inputGender">Giới tính:</label>
                                                        <select id="inputGender" name="gioitinh" class="form-control selectpicker" required data-live-search="true">
                                                            <option>Nam</option>
                                                            <option>Nữ</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label for="example-date-input">Ngày sinh:</label>
                                                    <input class="form-control" type="date" name="ngaysinh" required id="example-date-input">
                                                </div>
                                                <div class="form-group">
                                                    <label for="inputState">Quê quán</label>
                                                    <select id="inputState" name="quequan" class="form-control selectpicker" required data-live-search="true">
                                                        @foreach(var t in ViewBag.TinhThanhPho)
                                                        {
                                                            <option>@t</option>
                                                        }

                                                    </select>
                                                </div>
                                                <div class="form-group">
                                                    <label for="inputSubject">Bộ môn hoạt động:</label>
                                                    <select id="inputSubject" name="bomon" class="form-control selectpicker" required data-live-search="true">
                                                        @foreach (var bm in ViewBag.BoMon)
                                                        {
                                                            <option>@bm</option>
                                                        }
                                                    </select>
                                                </div>
                                                <button type="submit" class="btn btn-primary">Thêm giáo viên</button>
                                            </form>
                                            <!-- End From tag -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <!-- End Tabs -->
                </div>
                <!-- /.container-fluid -->
            </div>
            <!-- End of Main Content -->
            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Nhóm 2 Thực tập Cơ sở dữ liệu - Lê Minh Hiếu - Trịnh Việt Anh - Nguyễn Anh Tùng</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->
        </div>
        <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Bootstrap core JavaScript-->
    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/Content/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="~/Scripts/sb-admin-2.min.js"></script>
</body>
</html>
