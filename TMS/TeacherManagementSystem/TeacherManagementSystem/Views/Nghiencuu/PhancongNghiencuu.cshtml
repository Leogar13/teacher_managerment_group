                    <!-- Page Heading -->
                    <h1 class="h3 mb-4 text-gray-800">Phân công Nghiên cứu</h1>

                    <!-- Tabs -->
                    <section id="tabs">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-12 ">
                                    <form method="post" action="@Url.Action("PhancongNghiencuu", "Nghiencuu")">
                                        <div class="form-row shadow">
                                            <div class="form-group col-md-12">
                                                <label for="tenloainghiencuu">Tên Loại nghiên cứu</label>
                                                <select id="tenloaiNC" name="tenloaiNC" class="form-control selectpicker" onchange="getTenCT(); getDonvitinh();" required data-live-search="true">
                                                    @foreach (var item in ViewBag.TenloaiNC)
                                                    {
                                                        <option>@item</option>
                                                    }
                                                </select>
                                            </div>

                                            <div class="form-group col-md-6">
                                                <label for="tenCTKH">Công trình khoa học</label>
                                                <input class="hidden" type="hidden" id="MaCongtrinhKH" value="@ViewBag.TenCTNC[0].id" name="MCTKH" />
                                                <select id="tenCTKH" name="tenCTKH" class="form-control selectpicker" required data-live-search="true">
                                                    @foreach (var item in ViewBag.TenCTNC)
                                                    {
                                                        <option value="@item.id">@item.name</option>
                                                    }
                                                </select>
                                            </div>                                            
                                            <div class="form-group col-md-3">
                                                <label for="hocphan">Số</label>
                                                <input type="text" name="so" id="so" class="form-control" value="@ViewBag.So" disabled>
                                            </div>
                                            <div class="form-group col-md-3">
                                                <label for="donvi">Đơn vị</label>
                                                <input type="text" name="donvitinh" id="donvitinh" class="form-control" value="@ViewBag.Donvitinh" disabled>
                                            </div>

                                            <div class="form-group col-md-1">
                                                <label for="MaGV">MGV</label>
                                                <input type="text" name="PCNCmaGV_0" class="form-control" value="@ViewBag.ListGV[0].MaGV" disabled>
                                            </div>
                                            <div class="form-group col-md-9">
                                                <label for="Tengiaovien">Tên giáo viên</label>
                                                <select name="PCNCTengiaovien_0" class="form-control selectpicker" onchange="changeMaGV(0)" required data-live-search="true">
                                                    @foreach (var item in ViewBag.ListGV)
                                                    {
                                                        <option value="@item.MaGV">@item.HoTen</option>
                                                    }
                                                </select>
                                            </div>
                                            <div class="form-group col-md-2">
                                                <label for="vaitro">Vai trò</label>
                                                <select id="NCVaitro" name="PCNCvaitro_0" class="form-control selectpicker" required data-live-search="true">
                                                    @foreach (var item in ViewBag.TenVaitro)
                                                    {
                                                        <option value="@item.MaVaitro">@item.TenVaitro</option>
                                                    }
                                                </select>
                                            </div>

                                            <div class="col-md-12">
                                                <button type="button" class="btn btn-primary" onclick="addNghiencuu()">+</button>
                                            </div>

                                            <div class="col-md-12" id="PCGDgiaovien">

                                            </div>

                                            <div class="form-group col-md-12" style="text-align:center;">
                                                <button type="submit" class="btn btn-primary">Submit</button>
                                            </div>
                                        </div>
                                    </form>

