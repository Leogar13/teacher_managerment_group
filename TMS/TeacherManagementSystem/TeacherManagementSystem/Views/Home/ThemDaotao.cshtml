    <script>
        function getSoTiet() {
            var x = document.getElementById("inputTenhocphan");
            $.ajax({
                url: "/Home/GetSoTietHP/" + x.value,
                dataType: "json",
            }).done(function (result) {
                document.getElementById("inputsotiet").value = result;
            });
        }
        function getSoTinChi() {
            var x = document.getElementById("inputTenhocphan");
            $.ajax({
                url: "/Home/GetSoTinChi/" + x.value,
                dataType: "json",
            }).done(function (result) {                
                document.getElementById("inputsotinchi").value = result;
            });
        }
        var countHV = 0;
        function addHocVien() {
            var ip = document.createElement("div");
            countHV++;
            var addThis =
                `
                                               <div class="form-row col-md-12" name="delHV_`+ countHV + `">
                                                    <div class="form-group col-md-5">
                                                        <label for="inputHocVien_`+ countHV +`">Tên Học viên</label>
                                                        <input type="text" name="TenHV_`+ countHV+`" class="form-control" id="inputHocVien_`+ countHV+`" required>
                                                    </div>
                                                    <div class="form-group col-md-2">
                                                        <label for="inputTenLopHoc_`+ countHV +`">Tên Lớp</label>
                                                        <select id="inputTenLopHoc_`+ countHV+`" name="TenLopHV_`+ countHV+`" class="form-control selectpicker" required data-live-search="true">
                                                            <option selected>Chọn</option>
                                                            @foreach (var v in ViewBag.lopDangCo)
                                                            {
                                                                <option>@v</option>
                                                            }
                                                        </select>
                                                    </div>

                                                    <div class="form-group col-md-4" style="text-align:center;">
                                                        <label for="inputDeTai_`+ countHV +`">Tên đề tài hướng dẫn</label>
                                                        <input type="text" name="TenDeTai_`+ countHV+`" class="form-control" id="inputDeTai_`+ countHV +`" required>
                                                    </div>
                                                    <div class="form-group col-md-1">
                                                        <label for="inputTenhocvien">    </label>
                                                        <button class="btn btn-danger float-right" name="`+ countHV + `" onclick = "delHocVien('delHV_` + countHV + `')">-</button>
                                                    </div>
                                                </div>
                                                
                        `;
            ip.innerHTML = addThis;
            document.getElementById("ThemHocVien_HD").appendChild(ip);
        }

        function delHocVien(namebox) {
            document.getElementsByName(namebox)[0].remove();
        }
       
    </script>
